{
  "manifest_version": 3,
  "name": "ProFarsiReading",
  "version": "1.0",
  "description": "Toggle Persian font (IRANSans) and adjust font size for better reading experience.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "reset-font-size": {
      "suggested_key": { "default": "Ctrl+Shift+0" },
      "description": "Reset font size"
    },
    "increase-font-size": {
      "suggested_key": { "default": "Ctrl+Shift+9" },
      "description": "Increase font size"
    },
    "decrease-font-size": {
      "suggested_key": { "default": "Ctrl+Shift+8" },
      "description": "Decrease font size"
    },
    "toggle-font": {
      "suggested_key": { "default": "Ctrl+Shift+1" },
      "description": "Toggle Persian font"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/IRANSansXV.woff2",
        "fonts/IRANSansXV.woff",
        "fonts/IRANSansXVF.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}